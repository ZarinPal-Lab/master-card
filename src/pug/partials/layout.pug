block project-info
    - var version     = '0.0.1alpha'

doctype html
html
    head
        meta(charset='utf8')
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title مستر کارد -
            | #{pageName}

        // Page css assets
        block css
            link(rel="stylesheet" type="text/css" href ="/assets/css/styles.css")
    body
        // Header Template
        if fileName == "index"
            include header-intro
        else
            include header
        // ./Header Template
        // Page Content
        block content
        // ./Page Content
        // Footer Template
        include footer.pug
        // ./Footer Template
        // Page js assets
        block js
            script(src='assets/js/app.js')
